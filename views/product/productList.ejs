<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head')%>
<body>
    <!---- Comienzo del header -->  
    <%- include('../partials/header') %>
    <!---- Comienzo del main --> 
    <main>
    <div class="container">
            <div class="productos-destacados">
                <h2>Productos </h2>
            <div class="products">
                
                <% for (let product of products) { %>
                    <article class="productos-destacados">
                        <div class="product-box">    
                            <img src="/images/<%= product.image %> " alt="" width="300px">
                            <h5><a href="/product/<%= product.id %>/detail"><%=product.name%> <%=product.brand%></a></h5>
                            <p>$ <%=product.price%></p>
                            <p><%=product.category.name%></p>
                        </div>
                    </article>
                    
                <% } %>
            </div>
            </div>
    </div>   
    </main>
    <%- include('../partials/footer')%>
</body>
</html>